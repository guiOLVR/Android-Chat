<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#443965"
    tools:context="br.com.wolfchat.gui_m.wolfchat.MainActivity">

    <include android:id="@+id/toolbar_main"
        layout="@layout/toolbar"/>

    <br.com.wolfchat.gui_m.wolfchat.helper.SlidingTabLayout
        android:id="@+id/stl_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"></br.com.wolfchat.gui_m.wolfchat.helper.SlidingTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

</LinearLayout>
